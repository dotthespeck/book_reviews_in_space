<%= form_for @review, :url => { :action => "update" } do |f| %>

<% if @review.errors.any? %>
<div id="error_explanation">
  <h2><%= "#{@review.errors.count} prevented the book from being saved:" %></h2>
  <ul>
    <% @review.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= f.label :review, "Review" %><br />
  <%= f.text_area :review, :value => @review.review, :size => "30x10" %>

</div>

<div class="actions">
  <%= f.submit "Edit Review" %>
</div>

<%= button_to 'Delete', book_review_path, method: 'delete', data: { confirm: 'Are you sure?' } %>

<% end %>
